# VPS Production Environment Configuration
# Copy this to .env on your VPS

# Database Configuration (VPS PostgreSQL)
DATABASE_URL=jdbc:postgresql://localhost:5432/kuberfashion_prod?sslmode=disable
DATABASE_USERNAME=kuberfashion_prod
DATABASE_PASSWORD=YourSecureProductionPassword2025!

# PostgreSQL Container Settings
POSTGRES_PASSWORD=YourSecureProductionPassword2025!
PGADMIN_EMAIL=admin@yourdomain.com
PGADMIN_PASSWORD=SecureAdminPassword123!

# JWT Configuration
JWT_SECRET=GenerateANewLongRandomSecretForProduction123456789
JWT_EXPIRATION=3600

# Server Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=prod

# CORS Configuration - UPDATE WITH YOUR DOMAIN
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Logging Configuration
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_KUBERFASHION=INFO
LOGGING_LEVEL_SECURITY=WARN

# JPA/Hibernate
HIBERNATE_DDL_AUTO=validate
HIBERNATE_SHOW_SQL=false
HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect

# Cloudflare R2 Storage Configuration
CLOUDFLARE_R2_ACCESS_KEY=your_r2_access_key_here
CLOUDFLARE_R2_SECRET_KEY=your_r2_secret_key_here
CLOUDFLARE_R2_ACCOUNT_ID=your_account_id_here
CLOUDFLARE_R2_BUCKET_NAME=kuberfashion-storage
CLOUDFLARE_R2_PUBLIC_URL=https://cdn.yourdomain.com

# Redis Configuration (if using Redis cache)
CACHE_TYPE=simple
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
